#include <stdio.h>
#include <stdlib.h>

int main(int argc, char const *argv[])
{
	taille_tab();
	return 0;
}

int taille_tab()
{
	int taille = 10;
	int nombre_joueur;
	int n_joueur;


	printf("Combien de joueur y'a t'il ?\n");
	scanf("%d",&nombre_joueur);

	n_joueur = nombre_joueur;

	while(nombre_joueur >= 5)
	{
		taille = taille + 5;
		nombre_joueur = nombre_joueur - 5;
	}

	crea_map(taille,n_joueur);
}

int crea_map(int taille, int n_joueur)
{
	char map[taille][taille];
	int i,j;

	for (i = 0; i <= taille-1; ++i)
	{
		for (j = 0; j <= taille-1; ++j)
		{
			if (i == 0 || i == taille-1 || j == 0 || j == taille-1)
			{
				map[i][j] = 88;
			}
			else
			{
				map[i][j] = 0;
			}
		}
	}

	for (i = 0; i <= taille-1; ++i)
	{
		for (j = 0; j <= taille-1; ++j)
		{
			printf("%c",map[i][j]);
		}
		printf("\n");
	}
}

int tour(int joueur[n_joueur])
{
	for (int i = 0; i < nombre_joueur - 1; ++i)
	{
		joueur[i] = mouvement_random(map,x,y) // Trouver un moyen pour decouvrir la position x et y du joueur concernÃ© au debut du tour
	}
}

int mouvement_random(int **map, int x, int y)
{
  int choix, a;
  a = aleat(6);
  choix = rand() %;
  for (i=0; i<a; i++)
  {
    switch(choix)
    {
      case 1:
        if (map[x+1]==-3) {return map[x][y];}
        else
        {
          map[x][y] = map[x + 1][y];
        }
        break;
      case 2:
        if (map[x-1]==-3) {return map[x][y];}
        else
        {
          map[x][y] = map[x - 1][y];
        }
        break;
      case 3:
        if (map[y+1]==-3) {return map[x][y];}
        else
        {
          map[x][y] = map[x][y + 1];
        }
        break;
      case 4:
        if (map[y-1]==-3) {return map[x][y];}
        {
          map[x][y] = map[x][y - 1];
        }
        break;
    }
  }
  retrecir(taille,map[taille][taille])
  return map[x][y];
}


int retrecir(int taille , char map[taille][taille])
{
	int x = 1;

	for (int i = 0; i < taille-1; ++i)
	{
		for (int j = 0; j < taille-1; ++j)
		{
			if (i <= x || i >= taille-(x-1) || j <= 0 || j >= taille-(x-1))
			{
				map[i][j] = 88;
			}
			else
			{
				map[i][j] = 0;
			}
		}
	}

}
