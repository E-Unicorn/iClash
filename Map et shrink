#include <stdio.h>
#include <stdlib.h>

int main(int argc, char const *argv[])
{
	taille_tab();
	return 0;
}

int taille_tab()
{
	int taille = 10;
	int nombre_joueur;
	int n_joueur;


	printf("Combien de joueur y'a t'il ?\n");
	scanf("%d",&nombre_joueur);

	n_joueur = nombre_joueur;

	while(nombre_joueur >= 5)
	{
		taille = taille + 5;
		nombre_joueur = nombre_joueur - 5;
	}

	crea_map(taille,n_joueur);
}

int crea_map(int taille, int n_joueur)
{
	char map[taille][taille];
	int i,j;

	for (i = 0; i <= taille-1; ++i)
	{
		for (j = 0; j <= taille-1; ++j)
		{
			if (i == 0 || i == taille-1 || j == 0 || j == taille-1)
			{
				map[i][j] = 88;
			}
			else
			{
				map[i][j] = 0;
			}
		}
	}

	for (i = 0; i <= taille-1; ++i)
	{
		for (j = 0; j <= taille-1; ++j)
		{
			printf("%c",map[i][j]);
		}
		printf("\n");
	}
}
